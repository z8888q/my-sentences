{
  "name": "Save to Sentences",
  "description": "Save to  Sentences and See it Anywhere.",
  "version": "0.1",
  "permissions": ["contextMenus"],
  "background": {
    "persistent": false,
    "scripts": [
      "jquery-3.1.0.min.js",
      "sentence.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "alertify.js",
        "content.js"],
      "css":["default.css","alertify.css"]
    }
  ],
  "manifest_version": 2
}
